{% extends 'base.html.twig' %}

{% block title %}Modification Annonce{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Annonce</h1>
        {{ form_start(form) }}
        <img class="card" src="{{ asset('uploads/images/' ~ annonce.image) | imagine_filter('thumb') }}"/>
        {# affiche le champ image et ensuite les autres inputs #}
        <div class="mb-4">{{ form_row(form.image) }} </div>
        <div class="mb-4">{{ form_row(form.titre) }}</div>
        <div class="mb-4"> {{ form_row(form.description) }}</div>
        <div class="mb-4">{{ form_row(form.prix) }}</div>
        <div class="mb-4">{{ form_row(form.fk_ville) }}</div>
        <div class="mb-4">{{ form_row(form.categorie) }}</div>
        <button type="submit" class="btn btn-warning">Modifier</button>
        {{ form_end(form) }}
</div>
{% endblock %}
