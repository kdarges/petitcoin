{% block body %}

<body>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form method="post" class="login100-form validate-form">
					{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				    {% endif %}
						<span class="login100-form-title p-b-48">
						<img src="/img/logo_noir.png" style="max-width: 75px">
					</span>
					<span class="login100-form-title p-b-26">
						Connexion
					</span>

				
					<div class="wrap-input100 validate-input" data-validate = "Valid email is: a@b.c">
						<input placeholder="Pseudo" id="inputPseudo" class="input100" type="text" name="pseudo" required >
					</div>

					<div class="wrap-input100 validate-input" data-validate="Enter password">
						<span class="btn-show-pass">
							<i class="zmdi zmdi-eye"></i>
						</span>
						<input placeholder="Mot de passe" id="inputPassword" class="input100" type="password" name="password" required>
					</div>

					<input type="hidden" name="_csrf_token"
          			 value="{{ csrf_token('authenticate') }}">

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button type="submit" class="login100-form-btn">
								Me connecter
							</button>
						</div>
					</div>

					<div class="text-center p-t-115">
						<span class="txt1">
							Pas de compte ?
						</span>

						<a class="txt2" href="/register">
							Créez en un !
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	
	<div id="dropDownSelect1"></div>
</body>
</html>
