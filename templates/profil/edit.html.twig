{% extends 'base.html.twig' %}

{% block title %}Modification Profil{% endblock %}

{% block body %}

<div class="container mb-5" style="margin-top:50px">

    <h1 class="mb-5 text-center">Modifier votre profil</h1>

    {{ form_start(profil) }}

        <div class="container mb-5">
            <h2>Identifiants</h2>
            <div class="row mb-3">
                <label for="profil_pseudo" class="col-sm-2 col-form-label">Pseudo</label>
                <div class="col-sm-10">
                    {{ form_row(profil.pseudo) }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="profil_plainPassword" class="col-sm-2 col-form-label">Mot de passe</label>
                <div class="col-sm-10">
                    {{ form_row(profil.plainPassword) }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="profil_avatar" class="col-sm-2 col-form-label">Avatar</label>
                <div class="col-sm-10">
                    {{ form_row(profil.avatar) }}
                </div>
            </div>
        </div>

        <div class="container mb-5">
            <h2>Coordonnées</h2>
            <div class="row mb-3">
                <label for="profil_coordonnees_nom" class="col-sm-2 col-form-label">Nom</label>
                <div class="col-sm-10">
                    {{ form_row(profil.coordonnees.nom) }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="profil_coordonnees_prenom" class="col-sm-2 col-form-label">Prénom</label>
                <div class="col-sm-10">
                    {{ form_row(profil.coordonnees.prenom) }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="profil_coordonnees_tel" class="col-sm-2 col-form-label">Téléphone</label>
                <div class="col-sm-10">
                    {{ form_row(profil.coordonnees.tel) }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="profil_coordonnees_mail" class="col-sm-2 col-form-label">Adresse mail</label>
                <div class="col-sm-10">
                    {{ form_row(profil.coordonnees.mail) }}
                </div>
            </div>
        </div>

        <div class="container mb-5">
            <h2>Adresse</h2>
            <div class="row mb-3">
                <label for="profil_coordonnees_address_no" class="col-sm-2 col-form-label">Numéro de rue</label>
                <div class="col-sm-10">
                    {{ form_row(profil.coordonnees.address.no) }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="profil_coordonnees_address_rue" class="col-sm-2 col-form-label">Rue</label>
                <div class="col-sm-10">
                    {{ form_row(profil.coordonnees.address.rue) }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="profil_coordonnees_address_villes" class="col-sm-2 col-form-label">Ville</label>
                <div class="col-sm-10">
                    {{ form_row(profil.coordonnees.address.villes) }}
                </div>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-dark " style="">Modifier mon compte</button>
        </div>

    {{ form_end(profil) }}
</div>
{% endblock %}
