{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Profil</h1>
    <table>
    <tr><td>{{ user.pseudo }}</td></tr>
    <tr><td>{{ user.coordonnees.nom }}</td></tr>
    <tr><td>{{ user.coordonnees.prenom }}</td></tr>
    <tr><td>{{ user.coordonnees.tel }}</td></tr>
    <tr><td>{{ user.coordonnees.mail }}</td></tr>
    <tr><td>{{ user.coordonnees.address.no }}</td>
    <td>{{ user.coordonnees.address.rue }}</td></tr>
    <td>{{ user.coordonnees.address.villes[0].nom }}</td>
    <td>{{ user.coordonnees.address.villes[0].cp }}</td></tr>
    </table>
    <a href='/profil/edit'>Modifier mon profil</a>
</div>
{% endblock %}